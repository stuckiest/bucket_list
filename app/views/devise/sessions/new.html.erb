<div class="container">
  <div class="blue-text">
    <h2 class="center-align"></h2>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field white-text">
    <%= f.label :email, class: 'white-text' %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field white-text">
    <%= f.label :password, class: 'white-text' %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field white-text">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'white-text' %>
    </div>
  <% end -%>

  <div class="actions">
    <button class="btn-small blue darken-3 waves-effect waves-light white-text" type="submit" name="action">Submit
    </button>
  </div>
<% end %>

<%= render "devise/shared/links" %>
