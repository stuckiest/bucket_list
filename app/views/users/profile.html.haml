.container
  =link_to 'New', new_user_goal_path(@user), class: 'btn-floating btn-large waves-effect waves-light blue darken-3 right'
  %h1.center-align Welcome #{@user.first_name}
  
  - @goals.each do |goal|
    %h2 
      = goal.title
    %p 
      = goal.description
    %p 
      = goal.location
    %p 
      = goal.completed
    %p
      =link_to 'Edit', edit_user_goal_path(goal, @user), class: 'btn'
